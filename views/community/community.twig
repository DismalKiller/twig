{% extends 'layout.twig' %}

{% block body %}
    <div class="community">
        <div class="community-left">
            <div class="community-list">
                {% for community in communityList %}
                    <a href="/community/{{ type==1?'forum':'video' }}?id={{ community.id }}" class="item">
                        <div class="img">
                            <img src="{{ community.img }}" alt="">
                        </div>
                        <div class="title">{{ community.title }}</div>
                        <div class="info">
                            <div class="avatar">
                                <img src="{{ community.avatar }}" alt="">
                            </div>
                            <div class="author">{{ community.author }}</div>
                            <div class="view">{{ community.view }}浏览</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="community-right">
            <div class="community-banner">
                {% include './carousel.twig' with {images} %}
            </div>
            <div class="community-hot">
                <h3>近期热门贴</h3>
                <div class="community-hot-content">
                    {% for item in hotList %}
                        <a href="/community/{{ type==1?'forum':'video' }}?id={{ community.id }}">
                            <div class="community-hot-item">
                                <img src="{{ item.img }}" alt="">
                                <h5>{{ item.title }}</h5>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="community-interested">
                <h3>你感兴趣</h3>
            </div>
        </div>
    </div>
    <style>
        .community {
            display: flex;
            justify-content: space-between;
            padding: 25px 20px;

            .community-left {
                flex: 1;
                margin-right: 25px;

                .community-list {
                    display: flex;
                    flex-wrap: wrap;
                    justify-content: space-between;

                    .item {
                        width: 32%;

                        .title {
                            font-weight: 600;
                            padding: 14px 14px 7px;
                        }

                        .img {
                            width: 100%;

                            img {
                                width: 100%;
                            }
                        }

                        .info {
                            display: flex;
                            padding: 0 14px;
                            justify-content: space-between;

                            .avatar {
                                img {
                                    width: 37px;
                                    height: 37px;
                                    border-radius: 50%;
                                }
                            }

                            .author {
                                flex: 1;
                                color: rgba(82, 143, 255, 1);
                                font-size: 14px;
                                margin-left: 8px;
                            }
                        }
                    }
                }
            }

            .community-right {
                width: 25%;
                display: flex;
                flex-direction: column;
                align-items: center;

                .community-banner {
                    width: 371px;
                    height: 470px;
                }

                .community-hot {
                    width: 371px;
                    margin-bottom: 10px;
                    padding: 15px 20px;
                    box-sizing: border-box;

                    .community-hot-content {
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: space-between;

                        .community-hot-item {
                            width: 158px;

                            img {
                                width: 158px;
                                height: 101px;
                            }
                        }
                    }
                }

                .community-interested {
                    border: 1px solid rgba(187, 187, 187, 1);
                    width: 371px;
                    height: 212px;
                    padding: 13px 33px;
                    box-sizing: border-box;
                }
            }

        }
    </style>
{% endblock %}
