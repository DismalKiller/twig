<section class="homeList">
    <div class="tab">
        <div>博客</div>
        <div>帖子</div>
        <div>评论</div>
        <div>收藏</div>
        <div>关注</div>
    </div>
    <ul>
        {% for item in blogList %}
            <li>
                <a href="/detail?id={{ item.id }}">
                    <article>
                        <div>
                            <div class="title">{{ item.title }}</div>
                            <div class="content">{{ item.content }}</div>
                            <div class="info">
                                <div class="author">{{ item.author }}</div>
                                <div class="time">{{ item.time }}</div>
                                <div class="comment">
                                    <img src="/icons/comment.svg" alt="">
                                    {{ item.comment }}
                                </div>
                                <div class="like">
                                    <img src="/icons/like.svg" alt="">
                                    {{ item.like }}
                                </div>
                                <div class="read">
                                    <img src="/icons/view.svg" alt="">
                                    {{ item.read }}
                                </div>
                            </div>
                        </div>
                        <div class="img-box">
                            <img src="{{ item.img }}" alt="">
                        </div>
                    </article>
                </a>
            </li>
        {% endfor %}
    </ul>
</section>
<style>
    .homeList {
        background-color: rgba(255, 255, 255, 1);
        border-radius: 20px;
        border: 1px solid rgba(187, 187, 187, 1);
        width: 1028px;
        padding: 30px 50px;
        margin: 10px;
        box-sizing: border-box;

        .tab {
            display: flex;
            border-radius: 20px;
            border-bottom: 1px solid rgba(187, 187, 187, 1);
            font-size: 28px;
            font-weight: bold;
            justify-content: space-around;
            margin-top: -30px;
            margin-left: -50px;
            margin-bottom: 10px;
            width: calc(100% + 76px);
            padding: 12px;
        }

        article {
            display: flex;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(246, 246, 246, 1);

            .title {
                color: rgb(51, 51, 51);
                font-size: 15px;
                font-weight: 700;
            }

            .content {
                color: rgb(159, 159, 159);
                font-size: 13px;
                margin-top: 13px;
                margin-bottom: 14px;
            }

            .info {
                display: flex;
                color: rgb(159, 159, 159);
                font-size: 11px;

                & > div {
                    margin-right: 20px;
                    display: flex;
                    align-items: center;

                    img {
                        margin-right: 2px;
                    }
                }
            }

            .img-box {
                margin-left: 25px;

                img {
                    width: 230px;
                    height: 90px;
                }
            }
        }
    }</style>
