<div class="comment">
    {% for comment in commentList %}
        <div class="comment-item">
            <div class="item">
                <div class="avatar">
                    <img src="{{ comment.avatar }}" alt="">
                </div>
                <div class="right">
                    <div class="author">{{ comment.author }}</div>
                    <div class="content">{{ comment.content }}</div>
                    <div class="bottom">
                        <div class="time">{{ comment.time }}</div>
                        <div class="like">
                            <img src="/icons/like.svg" width="21px" height="21px" alt="">
                            {{ comment.like }}
                        </div>
                        <div class="bad">
                            <img src="/icons/bad-9f9f9f.svg" alt=""/>
                        </div>
                        <div class="reply">
                            <a href="javascript:;">回复</a>
                        </div>
                        <div class="ellipsis">
                            <img src="/icons/ellipsis.svg" alt=""/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="reply">
                {% for reply in comment.reply %}
                    <div class="item">
                        <div class="avatar">
                            <img src="{{ reply.avatar }}" alt="">
                        </div>
                        <div class="right">
                            <div class="author">{{ reply.author }}
                                <span class="content">{{ reply.content }}</span>
                            </div>
                            <div class="bottom">
                                <div class="time">{{ reply.time }}</div>
                                <div class="like">
                                    <img src="/icons/like.svg" width="21px" height="21px" alt="">
                                    {{ reply.like }}
                                </div>
                                <div class="bad">
                                    <img src="/icons/bad-9f9f9f.svg" alt=""/>
                                </div>
                                <div class="reply">
                                    <a href="javascript:;">回复</a>
                                </div>
                                <div class="ellipsis">
                                    <img src="/icons/ellipsis.svg" alt=""/>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
<style>
    .comment {
        border: 1px solid rgba(187, 187, 187, 1);
        padding: 30px 20px 85px 40px;
        margin-top: 11px;

        .comment-item {
            margin-bottom: 20px;

            .item {
                display: flex;
                gap: 20px;

                .avatar {
                    img {
                        width: 60px;
                        height: 60px;
                        border-radius: 50%;
                    }
                }

                .right {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                    gap: 5px;

                    .author {
                        color: #FC5531;
                        font-weight: bold;

                        .content {
                            color: initial;
                            font-weight: initial;
                        }
                    }

                    .bottom {
                        display: flex;
                        width: 100%;
                        gap: 20px;
                        align-items: center;
                        color: #9F9F9F;

                        & > div {
                            display: flex;
                            align-items: center;
                        }

                        .ellipsis {
                            margin-left: auto;
                        }
                    }
                }
            }

            & > .reply {
                margin-left: 40px;

                .item {
                    margin-top: 12px;

                    .right .content {
                        margin-left: 6px;
                    }
                }

                .avatar {
                    img {
                        width: 40px;
                        height: 40px;
                        border-radius: 50%;
                    }
                }
            }
        }

    }
</style>
