{# pagination.twig #}

{% macro pagination(pagination) %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pagination.current_page > 1 %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ pagination.url_pattern|replace('(:num)', pagination.current_page - 1) }}"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% endif %}

            {% for i in 1..pagination.total_pages %}
                <li class="page-item {{ i == pagination.current_page ? 'active' : '' }}">
                    <a class="page-link" href="{{ pagination.url_pattern|replace('(:num)', i) }}">{{ i }}</a>
                </li>
            {% endfor %}

            {% if pagination.current_page < pagination.total_pages %}
                <li class="page-item">
                    <a class="page-link"
                       href="{{ pagination.url_pattern|replace('(:num)', pagination.current_page + 1) }}"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endmacro %}
